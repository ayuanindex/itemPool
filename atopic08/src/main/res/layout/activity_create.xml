<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <!-- 左侧-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_userAppointmentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="订单名称"
                android:textColor="#222"
                android:textSize="@dimen/sp_12" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车型："
                    android:textColor="#222"
                    android:textSize="@dimen/sp_12" />

                <Spinner
                    android:id="@+id/sp_1"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="wrap_content"
                    android:entries="@array/type" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发动机排量："
                    android:textColor="#222"
                    android:textSize="@dimen/sp_12" />

                <Spinner
                    android:id="@+id/sp_2"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="wrap_content"
                    android:entries="@array/engine" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="变速箱："
                    android:textColor="#222"
                    android:textSize="@dimen/sp_12" />

                <Spinner
                    android:id="@+id/sp_3"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="wrap_content"
                    android:entries="@array/speed" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="悬挂："
                    android:textColor="#222"
                    android:textSize="@dimen/sp_12" />

                <Spinner
                    android:id="@+id/sp_4"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="wrap_content"
                    android:entries="@array/hang" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量："
                    android:textColor="#222"
                    android:textSize="@dimen/sp_12" />

                <Spinner
                    android:id="@+id/sp_5"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="wrap_content"
                    android:entries="@array/num" />

            </LinearLayout>


        </LinearLayout>

        <!--        右侧-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="订单描述"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="轮毂："
                    android:textColor="#222"
                    android:textSize="@dimen/sp_12" />

                <Spinner
                    android:id="@+id/sp_6"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="wrap_content"
                    android:entries="@array/wheel" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中控："
                    android:textColor="#222"
                    android:textSize="@dimen/sp_12" />

                <Spinner
                    android:id="@+id/sp_7"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="wrap_content"
                    android:entries="@array/control" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刹车："
                    android:textColor="#222"
                    android:textSize="@dimen/sp_12" />

                <Spinner
                    android:id="@+id/sp_8"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="wrap_content"
                    android:entries="@array/brake" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="外观装饰："
                    android:textColor="#222"
                    android:textSize="@dimen/sp_12" />

                <Spinner
                    android:id="@+id/sp_9"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="wrap_content"
                    android:entries="@array/color" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="#1E8887"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#EB2A28"
            android:text="提交订单"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>


</LinearLayout>